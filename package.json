{
  "name": "github_actions_express.js",
  "version": "1.0.0",
  "description": "Demonstrates CI/CD for a Node.js REST-API with express.js",
  "author": "Christopher Stock <christopher.stock@mayflower.de>",
  "main": "src/js/server.js",
  "scripts": {
    "start": "node src/server.js",
    "eslint": "eslint \"{src,test}/**/*.{js,jsx}\"",
    "eslintReport": "eslint --format junit -o public/linter-report.xml \"{src,test}/**/*.{js,jsx}\"",
    "test": "mocha",
    "testReport": "mocha --reporter xunit --reporter-option output=public/test-report.xml",
    "release": "webpack --mode=production",
    "jsdoc": "jsdoc --destination public/jsdoc src/server.js",
    "jest": "jest",
    "jestCoverage": "jest --coverage --coverageDirectory public/coverage"
  },
  "dependencies": {
    "express": "^4.16.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "jest": "^27.2.5",
    "jsdoc": "^3.6.7",
    "mocha": "^9.1.2",
    "supertest": "^6.1.6",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.10"
  }
}
